.app {
	width: 100%;
	height: 100%;

	position: relative;

	overflow: hidden;

	display: flex;
	color: white;

	.info-area {
		flex: 1 0 0;
		background-color: #19151A;
	}

	.editor-area {
		flex: 4 0 0;
	}

	.sensor-area {
		flex: 2 0 0;
		background-color: #1B2121;
	}

	.head {
		font-size: 22px;
		padding: 0.5em;
	}
}
